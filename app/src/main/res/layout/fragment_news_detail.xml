<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.NewsDetailFragment">

    <ImageView
        android:id="@+id/image_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/faded_gradient"
        android:textSize="16dp"
        android:id="@+id/tv_title"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_news" />

    <LinearLayout
        android:id="@+id/sub_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_news"
        android:background="@color/news_white"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:paddingEnd="30dp"
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_news"
            android:fontFamily="@font/helvetica_condensed"
            android:text="Source"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_source"
            android:text="10 min ago"
            android:textColor="@color/news_grey" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sub_head_layout"
        android:background="@color/news_white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jghalkfjghlkafjghlkfdjghkldfjgd" />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableEnd="@drawable/arrow_next"
            android:drawablePadding="2dp"
            android:padding="16dp"
            android:text="See full story"
            android:textColor="@color/news_blue"
            android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>